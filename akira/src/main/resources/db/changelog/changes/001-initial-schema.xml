<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1" author="Dmitrii Vinogradov">
        <!-- Create custom enum types -->
        <sql>
            CREATE TYPE notifier_type AS ENUM ('TELEGRAM');
        </sql>

        <sql>
            CREATE TYPE notification_status AS ENUM ('CREATED', 'DELIVERED', 'FAILED');
        </sql>

        <sql>
            CREATE TYPE client_status AS ENUM ('OK', 'FAILED');
        </sql>

        <createTable tableName="notifier_config">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="notifier_type" type="notifier_type">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="bot_token" type="VARCHAR(255)"/>
            <column name="chat_id" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="notification_message">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="message" type="TEXT"/>
            <column name="status" type="notification_status">
                <constraints nullable="false"/>
            </column>
            <column name="sender_id" type="VARCHAR(255)"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <createTable tableName="clients">
            <column name="hostname" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="client_status">
                <constraints nullable="false"/>
            </column>
            <column name="last_message_at" type="TIMESTAMP"/>
        </createTable>

        <createTable tableName="client_messages">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_hostname" type="VARCHAR(255)">
                <constraints nullable="false" foreignKeyName="fk_message_client" references="clients(hostname)"/>
            </column>
            <column name="message" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="client_timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="received_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
