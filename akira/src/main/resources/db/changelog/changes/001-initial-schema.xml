<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1" author="Dmitrii Vinogradov">
        <!-- Create custom enum types -->
        <sql>
            CREATE TYPE notifier_type AS ENUM ('TELEGRAM');
        </sql>
        
        <sql>
            CREATE TYPE notification_status AS ENUM ('CREATED', 'DELIVERED', 'FAILED');
        </sql>
        
        <sql>
            CREATE TYPE monitor_status AS ENUM ('ACTIVE', 'FAILED');
        </sql>

        <createTable tableName="notifier_config">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="notifier_type" type="notifier_type">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="bot_token" type="VARCHAR(255)"/>
            <column name="chat_id" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="monitor_config">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="monitor_status">
                <constraints nullable="false"/>
            </column>
            <column name="notifier_config_id" type="BIGINT">
                <constraints foreignKeyName="fk_monitor_notifier" references="notifier_config(id)"/>
            </column>
        </createTable>

        <createTable tableName="http_monitor_config">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_http_monitor_config_id" references="monitor_config(id)"/>
            </column>
            <column name="url" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="expected_status" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="check_interval" type="INTERVAL"/>
            <column name="timeout" type="INTERVAL">
                <constraints nullable="false"/>
            </column>
            <column name="ignore_tls_errors" type="BOOLEAN"/>
        </createTable>

        <createTable tableName="syslog_monitor_config">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_syslog_monitor_config_id" references="monitor_config(id)"/>
            </column>
            <column name="source_ip" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="no_message_interval" type="INTERVAL">
                <constraints nullable="false"/>
            </column>
            <column name="last_message_at" type="TIMESTAMP"/>
        </createTable>

        <createTable tableName="notification_message">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="message" type="TEXT"/>
            <column name="status" type="notification_status">
                <constraints nullable="false"/>
            </column>
            <column name="sender_id" type="VARCHAR(255)"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <createTable tableName="syslog_message">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="message" type="TEXT"/>
            <column name="received_at" type="TIMESTAMP"/>
            <column name="source_id" type="BIGINT">
                <constraints foreignKeyName="fk_syslog_message_source" references="syslog_monitor_config(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
